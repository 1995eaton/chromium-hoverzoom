{
  "manifest_version": 2,
  "name": "Image Zoom",
  "version": "1.0.3",
  "description": "A simple alternative to Hover Zoom and Imagus",
  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png" },
  "author": "Jake Eaton",
  "permissions": [
    "<all_urls>",
    "history"
  ],
  "background": {
    "scripts": [
      "add_history.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
             "main.js"
            ],
      "css": [
              "style.css"
             ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
